<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="740.0" prefWidth="1233.0" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.rubennicolas.alquilervehiculos.vista.grafica.controllers.ControllerVistaAlquileres">
    <children>
        <TableView fx:id="tablaAlquileres" layoutX="218.0" layoutY="66.0" onMouseClicked="#seleccionar"
                   prefHeight="605.0" prefWidth="965.0">
            <columns>
                <TableColumn fx:id="colCliente" prefWidth="200.0" text="Cliente"/>
                <TableColumn fx:id="colVehiculo" prefWidth="400.0" text="Vehiculo"/>
                <TableColumn fx:id="colDibujoVehiculo" prefWidth="70.0" text="Tipo"/>
                <TableColumn fx:id="colFechaAlquiler" prefWidth="110.0" text="Fecha Alquiler"/>
                <TableColumn fx:id="colFechaDevolucion" prefWidth="110.0" text="Fecha Devolucion"/>
                <TableColumn fx:id="colGetPrecio" prefWidth="120.0" text="Importe Alquiler"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <Button fx:id="buttonAdd" layoutX="29.0" layoutY="107.0" mnemonicParsing="false" onAction="#addAlquiler"
                prefHeight="39.0" prefWidth="150.0" text="Añadir">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
        <Button fx:id="buttonDevolver" layoutX="29.0" layoutY="189.0" mnemonicParsing="false" onAction="#devolver"
                prefHeight="26.0" prefWidth="150.0" text="Devolver">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
        <Button fx:id="buttonEliminar" layoutX="29.0" layoutY="271.0" mnemonicParsing="false" onAction="#deleteAlquiler"
                prefHeight="26.0" prefWidth="150.0" text="Eliminar">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
        <Label layoutX="21.0" layoutY="14.0" prefHeight="66.0" prefWidth="186.0" text="Gestión de Alquileres">
            <font>
                <Font size="19.0"/>
            </font>
        </Label>
        <Button fx:id="buttonBack" layoutX="63.0" layoutY="653.0" mnemonicParsing="false" onAction="#volver"
                prefHeight="26.0" prefWidth="101.0" style="-fx-background-color: #BFEFFF;;" text="Volver">
            <font>
                <Font size="16.0"/>
            </font>
        </Button>
        <Label layoutX="970.0" layoutY="26.0" text="Buscar:">
            <font>
                <Font size="16.0"/>
            </font>
        </Label>
        <TextField fx:id="campoBuscar" layoutX="1033.0" layoutY="26.0" onKeyReleased="#buscar"/>
    </children>
</AnchorPane>
